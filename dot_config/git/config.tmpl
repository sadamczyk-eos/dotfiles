[color "diff"]
	whitespace = red reverse
[core]
	excludesfile = ~/.config/git/ignore_global # Store global exclusions into a custom file.
	pager = delta
[delta]
	hyperlinks = true
	navigate = true # use n and N to move between diff sections
	navigate-regex = ^(commit|added:|removed:|renamed:|Î”) # Remove hunk navigation. Too granular.
	side-by-side = true
	tabs = 4
[diff]
	colorMoved = default
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
	path = aliases
[init]
	templatedir = ~/.config/git/templates
[interactive]
	diffFilter = delta --color-only
[log]
	date = iso
[merge]
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	default = current
	autoSetupRemote = true
[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}

# TODO Test if I like these settings:
[mergetool]
	# Avoid saving an `.orig` backup file after a merge.
	keepBackup = false
[rebase]
	# Create a temporary stash entry before the operation begins.
	autostash = true
	autosquash = true
